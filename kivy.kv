#: import threading threading

<LWI>:
    id: list_item

    # IconLeftWidgetWithoutTouch:
    IconLeftWidget:
        icon: root.icon


    IconRightWidget:
        icon: "trash-can-outline"
        on_release: root.delete(list_item)


<Kv>:
    cols: 1
    rows: 11

    padding: [50, 50, 50, 50]
    spacing: [20, 0]

    Label:
        text: ''
        size_hint_y: 10

    MDTextField:
        id: text_field
        hint_text: 'URL'
        mode: 'rectangle'
        size_hint_x: 100

    Label:
        text: ''
        size_hint_y: 5

    MDRectangleFlatButton:
        text: 'Download'
        on_press: threading.Thread(target=root.download).start()
        # on_press: root.download()
        size_hint_x: 100

    Label:
        text: ''
        size_hint_y: 5

    MDProgressBar:
        id: progress_bar
        min: 0
        max: 100
        value: 100
        running_duration: 1

    Label:
        text: ''
        size_hint_y: 5

    GridLayout:
        cols: 3
        rows: 1

        Label:
            text: ''
            size_hint_x: 60

        MDLabel:
            text: 'Audio only'
            theme_text_color: 'Secondary'
            size_hint_x: 20

        MDCheckbox:
            on_press: root.change_type()
            size_hint_x: 10
    
    Label:
        text: ''
        size_hint_y: 5

    ScrollView:
        do_scroll_x: True
        size_hint_x: 100
        size_hint_y: 65

        MDList:
            id: list

    Label:
        text: ''
        size_hint_y: 5
